@model List<SolucionWEBMuseum.Models.ARTISTA>
@{
    ViewBag.Title = "ListarArtistas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">

                <div class="col-sm-6">
                    <h1 class="m-0">LISTAR ARTISTAS</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Inicio</a></li>
                        <li class="breadcrumb-item active">Listar artistas</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    @if (ViewBag.Message != null)
    {
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12">
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <h5><i class="icon fas fa-check"></i> Alerta!</h5>
                            @ViewBag.Message

                        </div>
                    </div>
                </div>
            </div>
        </section>
    }

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Lista con todos los artistas activos</h3>
                            <div class="col-12">
                                <a href="@Url.Content("~/Administracion/NuevoArtista/")">
                                    <button style="float: right;" style="text-align: center;" style="height:70px; width:100px" type="submit" class="btn btn-default">Agregar Artista</button>
                                </a>

                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="example1" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Nombre</th>
                                        <th>Apellido</th>
                                        <th>Sexo</th>
                                        <th>Fecha nacimeinto</th>
                                        <th>Descripción</th>
                                        <th>Fecha creación</th>
                                        <th>Estado</th>
                                        <th>Acción</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var omodel in Model)
                                    {

                                        <tr>
                                            <td>@omodel.id_artista</td>
                                            <td>@omodel.nombres_artista</td>
                                            <td>@omodel.apellidos_artista</td>
                                            <td>@omodel.genero_artista</td>
                                            <td>@omodel.fechanacimiento_artista</td>
                                            <td>@omodel.descripcion_artista</td>
                                            <td>@omodel.fechacreacion_artista</td>
                                            <td>@omodel.estado_artista</td>
                                            <td>
                                                <input onclick="document.location.href='@Url.Content("~/Administrador/Actualizar/"+omodel.id_artista)'" value="editar" type="button" />
                                                <input onclick="document.location.href='@Url.Content("~/Administrador/Eliminar/"+omodel.id_artista)'" value="eliminar" type="button" />
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot>
                                    <tr>
                                        <th>Id</th>
                                        <th>Nombre</th>
                                        <th>Apellido</th>
                                        <th>Sexo</th>
                                        <th>Fecha nacimeinto</th>
                                        <th>Descripción</th>
                                        <th>Fecha creación</th>
                                        <th>Estado</th>
                                        <th>Acción</th>
                                    </tr>
                                </tfoot>
                            </table>

                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

@section scripts{
    <script>

                                // Tabla
                                $(function () {
                                    $("#example1").DataTable({
                                        "responsive": true, "lengthChange": false, "autoWidth": false,
                                        "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
                                    }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
                                    $('#example2').DataTable({
                                        "paging": true,
                                        "lengthChange": false,
                                        "searching": false,
                                        "ordering": true,
                                        "info": true,
                                        "autoWidth": false,
                                        "responsive": true,
                                    });
                                });
    </script>
}
